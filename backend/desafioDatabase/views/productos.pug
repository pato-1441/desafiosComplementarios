extends layout 

block content 
    div(class="container")
        div(class="row my-2")
            table(class="table table-hover align-middle text-center")
                thead 
                    tr 
                        th Nombre
                        th Precio
                        th Imagen
                tbody
                    each item in productos
                        tr
                            td(class="col-3")=item.nombre
                            td(class="col-3")=item.precio
                            td(class="col-3")
                                if item.url
                                    img(class="img-fluid" src=item.url alt=item.nombre)
<div class="container my-5">
  <div class="jumbotron">
    <h1>Sign Up</h1>
    <br>
    <form class="form" action="/signup" method="post" role="form" autocomplete="off">

      <div class="form-group">
        <input id="nombre" name='username' placeholder="name" class="form-control" type="text" required>
      </div>

      <div class="form-group">
        <input id="password"  name='password' placeholder="password" class="form-control" type="password" required>
      </div>

      <div class="form-group">
        <input class="btn btn-success my-3" type="submit" value="Sign Up">
      </div>
    </form>
    
    <hr>
    
    <div class="text-left">
      <button class="btn btn-success my-3" onclick="location.href = '/login'">Log In</button>
    </div>
  </div>
</div>